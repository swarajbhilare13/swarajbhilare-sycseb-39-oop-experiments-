#include <iostream>
using namespace std;

class Num {
    int x;
public:
    Num(int a) : x(a) {}
    Num operator++() { x++; return *this; }       // Pre-increment
    Num operator++(int) { Num t = *this; x++; return t; } // Post-increment
    void show() { cout << "Value: " << x << endl; }
};

int main() {
    Num n(5);
    ++n; n.show();
    n++; n.show();
    return 0;
}
